<form action="/signup-form" method="post" class="LogColor container-fluid col-md-12" style="margin-bottom: 80px">
    <a class="font3" >Sign Up </a>
    <hr style="border: black solid 1px">
    <div class="container row">
        <div class="form-group col-sm-6">
            <label class="font2">Last Name: </label>
            <input type="text" class="form-control" name="{{box3}}" id="{{box3}}" placeholder="Last name" required/>
        </div>
        <div class="form-group col-sm-6">
            <label class="font2">First Name: </label>
            <input type="text" class="form-control" name="{{box2}}" id="{{box2}}" placeholder="First name" required/>
        </div>
    </div>
    <div class="container row">
        <div class="form-group col-6" >
            <label class="font2">Username: </label>
            <input type="text" class="form-control" name="{{box1}}" id="{{box1}}" placeholder="Username" required />
        </div>
        <div class="form-group col-sm-6">
            <label class="font2">Password: </label>
            <input type="password" class="form-control" name="{{box4}}" id="{{box4}}" placeholder="Password" required/>
        </div>
    </div>
    <div class="form-group col-11">
        <label class="font2">E-mail: </label>
        <input type="email" class="form-control" name="{{box5}}" id="{{box5}}" placeholder="E-mail" required/>
    </div>
    <div style="margin-left: 115px">
        <button type="submit" class="btn btn-primary" value="sign up" style="margin: 22px">Submit</button>
    </div>
</form>
